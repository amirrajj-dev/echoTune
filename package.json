  "license": "ISC",
  "dependencies": {
    "@clerk/express": "^1.3.4",
    "cloudinary": "^2.6.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "express-fileupload": "^1.5.1",
