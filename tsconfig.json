{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./backend/src/**/*.ts"],
  "exclude": ["node_modules"]
}